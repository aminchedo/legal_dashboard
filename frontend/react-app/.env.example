# Iranian Legal Archive System - Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# Application Configuration
VITE_APP_NAME=سیستم آرشیو اسناد حقوقی ایران
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_PROXY_MANAGEMENT=true
VITE_ENABLE_DOCUMENT_PROCESSING=true

# Security
VITE_ENABLE_AUTHENTICATION=false
VITE_SESSION_TIMEOUT=3600000

# Upload Configuration
VITE_MAX_FILE_SIZE=104857600
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_ENABLE_ANALYTICS=false